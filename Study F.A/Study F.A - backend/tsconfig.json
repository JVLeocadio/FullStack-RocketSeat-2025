{
  "compilerOptions": {
    "target": "ES6", // Compila o código para a versão ES6 do JavaScript
    "module": "CommonJS", // Usa o sistema de módulos CommonJS (necessário para Node.js)
    "outDir": "./dist", // Diretório onde os arquivos compilados serão salvos
    "rootDir": "./src", // Diretório raiz dos arquivos TypeScript
    "strict": true, // Ativa verificações estritas de tipo
    "esModuleInterop": true // Permite interoperabilidade com módulos ES6 padrão
  },
  "include": ["src/**/*"], // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}